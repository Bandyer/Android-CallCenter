<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/space32"
    android:paddingTop="@dimen/space32">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/switch_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space8"
        android:layout_marginLeft="@dimen/space8"
        android:layout_marginRight="@dimen/space8"
        android:layout_marginStart="@dimen/space8"
        android:layout_weight="1"
        android:src="@drawable/ic_switch_camera_white_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="0dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/toggle_microphone_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space8"
        android:layout_marginLeft="@dimen/space8"
        android:layout_marginRight="@dimen/space8"
        android:layout_marginStart="@dimen/space8"
        android:layout_weight="1"
        android:src="@drawable/ic_mic_off_white_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="0dp" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space16"
        android:layout_marginLeft="@dimen/space16"
        android:layout_marginRight="@dimen/space16"
        android:layout_marginStart="@dimen/space16"
        android:contentDescription="@string/hang_up"
        android:visibility="invisible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/toggle_camera_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space8"
        android:layout_marginLeft="@dimen/space8"
        android:layout_marginRight="@dimen/space8"
        android:layout_marginStart="@dimen/space8"
        android:layout_weight="1"
        android:src="@drawable/ic_videocam_off_white_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="0dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/toggle_volume_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space8"
        android:layout_marginLeft="@dimen/space8"
        android:layout_marginRight="@dimen/space8"
        android:layout_marginStart="@dimen/space8"
        android:layout_weight="1"
        android:src="@drawable/ic_volume_off_white_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="0dp" />

</LinearLayout>